{
  "version": "1.0.0",
  "configurations": [
    {
      "name": "JS",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "outputCapture" : "std"
    },
    {
      "name": "TS",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "args": [
        "${file}"
      ]
    }
  ]
}
