{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es6"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": false,
    "pretty": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./source/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["dist"]
}
